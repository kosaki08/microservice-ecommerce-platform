{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV", "VAULT_ADDR", "VAULT_TOKEN", "VAULT_SECRET_MOUNT", "VAULT_API_VERSION"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "outputs": [],
      "inputs": ["apps/**/src/**/*.{ts,tsx}", "packages/ui/**/*.{ts,tsx}"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
