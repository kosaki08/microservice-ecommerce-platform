{
  "name": "@portfolio-2025/prisma-schemas",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "postinstall": "pnpm generate",
    "build": "pnpm generate && tsc && pnpm postbuild",
    "postbuild": "cpx 'src/**/generated/**/*' dist",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "type-check": "tsc --pretty --noEmit",
    "clean": "rm -rf node_modules dist generated tsconfig.tsbuildinfo",
    "generate": "pnpm -r --filter=@portfolio-2025/prisma-schemas generate",
    "generate:user": "cd src/user-service && npx prisma generate",
    "generate:product": "cd src/product-service && npx prisma generate",
    "generate:order": "cd src/order-service && npx prisma generate",
    "generate:payment": "cd src/payment-service && npx prisma generate"
  },
  "exports": {
    "./user-service": {
      "types": "./dist/user-service/index.d.ts",
      "default": "./dist/user-service/index.js"
    },
    "./product-service": {
      "types": "./dist/product-service/index.d.ts",
      "default": "./dist/product-service/index.js"
    },
    "./order-service": {
      "types": "./dist/order-service/index.d.ts",
      "default": "./dist/order-service/index.js"
    },
    "./payment-service": {
      "types": "./dist/payment-service/index.d.ts",
      "default": "./dist/payment-service/index.js"
    }
  },
  "dependencies": {
    "@prisma/client": "^6.5.0"
  },
  "devDependencies": {
    "@portfolio-2025/eslint-config": "workspace:^",
    "@portfolio-2025/typescript-config": "workspace:^",
    "cpx": "^1.5.0",
    "prisma": "^6.5.0",
    "typescript": "5.7.3"
  }
}
