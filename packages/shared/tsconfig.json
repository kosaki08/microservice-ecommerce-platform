{
  "extends": "@portfolio-2025/typescript-config/base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "incremental": true,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@portfolio-2025/prisma-schemas/user-service": ["../prisma-schemas/src/user-service/generated/client"],
      "@portfolio-2025/prisma-schemas/product-service": ["../prisma-schemas/src/product-service/generated/client"],
      "@portfolio-2025/prisma-schemas/order-service": ["../prisma-schemas/src/order-service/generated/client"],
      "@portfolio-2025/prisma-schemas/payment-service": ["../prisma-schemas/src/payment-service/generated/client"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../prisma-schemas" }]
}
